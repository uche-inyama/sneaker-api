<!DOCTYPE html>
<html>
  <head>
    <title>SneakersApi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <% if current_admin %>
        <%=button_to 'sign out', destroy_admin_session_path, method: :delete %>
      <% else %>
        <%=link_to 'sign in', new_admin_session_path %>
      <% end %>
    </nav>
    <div>
      <% if current_admin %>
        <%= link_to 'create a product', new_product_path %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
